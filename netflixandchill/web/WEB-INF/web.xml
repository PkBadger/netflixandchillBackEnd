<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserMovieServlet</servlet-name>
        <servlet-class>com.netflix.servlets.UserMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.netflix.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieUserServlet</servlet-name>
        <servlet-class>com.netflix.servlets.MovieUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChillFromServlet</servlet-name>
        <servlet-class>com.netflix.servlets.ChillFromServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChillToServlet</servlet-name>
        <servlet-class>com.netflix.servlets.ChillToServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMovieServlet</servlet-name>
        <url-pattern>/findByUser/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieUserServlet</servlet-name>
        <url-pattern>/findByMovie/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChillFromServlet</servlet-name>
        <url-pattern>/matchedBy/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChillToServlet</servlet-name>
        <url-pattern>/matchedTo/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
